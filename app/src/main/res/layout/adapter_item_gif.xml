<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/gif_height"
    android:paddingRight="@dimen/item_divider"
    android:paddingTop="@dimen/item_divider">

    <ImageView
        android:id="@+id/preview_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.klinker.android.simple_videoview.SimpleVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@android:color/black"
        app:loop="true"
        app:stopSystemAudio="false"
        app:muted="true"
        app:showSpinner="true"/>

    <View
        android:id="@+id/touch_effect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?selectableItemBackground"  />


