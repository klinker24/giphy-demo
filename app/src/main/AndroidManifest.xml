<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.lklinker.giphy_tool">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.TrendsActivity"
            android:theme="@style/AppTheme.NoActionBar">

            <!-- This is what tells the Android Homescreen/Launcher that this is the activity
                 that should show up in the app list -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".activity.GiphySearchActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

    </application>

</manifest>